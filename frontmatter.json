{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "'blog'",
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "/src/layouts/Post.astro"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "pubDate",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "choice",
          "choices": [
            "cross-stitch",
            "interviews",
            "memories",
            "science-communication",
            "music",
            "books-and-films",
            "math-anxiety"
          ],
          "default": "memories"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Updated date",
          "name": "updatedDate",
          "type": "datetime",
          "dateFormat": "MMMM do, Y",
          "default": "{{now}}",
          "isModifiedDate": true
        },
        {
          "title": "updateTime",
          "name": "updateTime",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "heroImage",
          "name": "heroImage",
          "type": "fields",
          "fields": [
            {
              "title": "alt",
              "name": "alt",
              "type": "string"
            },
            {
              "title": "src",
              "name": "src",
              "type": "image"
            }
          ]
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "default": "susan-silver"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "feature",
          "name": "feature",
          "type": "boolean"
        },
        {
          "title": "relatedOne",
          "name": "relatedOne",
          "type": "fields",
          "fields": [
            {
              "title": "title",
              "name": "title",
              "type": "string"
            },
            {
              "title": "src",
              "name": "src",
              "type": "string"
            }
          ]
        },
        {
          "title": "relatedTwo",
          "name": "relatedTwo",
          "type": "fields",
          "fields": [
            {
              "title": "title",
              "name": "title",
              "type": "string"
            },
            {
              "title": "src",
              "name": "src",
              "type": "string"
            }
          ]
        },
        {
          "title": "relatedThree",
          "name": "relatedThree",
          "type": "fields",
          "fields": [
            {
              "title": "title",
              "name": "title",
              "type": "string"
            },
            {
              "title": "src",
              "name": "src",
              "type": "string"
            }
          ]
        },
        {
          "title": "show",
          "name": "show",
          "type": "boolean"
        }
      ]
    }
  ],
  "frontMatter.snippets.wrapper.enabled": false,
  "frontMatter.content.snippets": {
    "YouTube": {
      "description": "Embed a YouTube Video",
      "body": "<YouTube id=\"[[&selection]]\" />",
      "fields": [
        {
          "name": "selection",
          "title": "selection",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Fancy Blockquote": {
      "description": "A nicely styled blockquote",
      "body": [
        "<FancyBlockquote name=\"[[name]]\" cite=\"[[cite]]\">",
        "[[&selection]]",
        "</ FancyBlockquote>"
      ],
      "fields": [
        {
          "name": "name",
          "title": "name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "cite",
          "title": "cite",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "selection",
          "title": "selection",
          "type": "string",
          "single": true,
          "default": "FM_SELECTED_TEXT"
        }
      ]
    }
  }
}