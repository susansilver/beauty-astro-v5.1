---
import { Image } from "astro:assets";
const { src, alt, text } = Astro.props;
---

<div
  id="img-media"
  class="flex items-center justify-start md:flex-row flex-col gap-5"
>
  <Image src={src} alt={alt} format="avif" quality="mid" class="h-64 w-64" />
  <p class="m-0 md:pt-5">{text}</p>
</div>
