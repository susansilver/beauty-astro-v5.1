---
import { Image } from "astro:assets";
const { src, alt, caption } = Astro.props;
---

<figure class="p-2">
  <Image
    src={src}
    alt={alt}
    format="avif"
    quality="mid"
    class="mx-auto block w-6/12"
  />
  <figcaption class="flex justify-center text-xs">{caption}</figcaption>
</figure>
