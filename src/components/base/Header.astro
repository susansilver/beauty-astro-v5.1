---
import { getCollection } from "astro:content";
import HeaderLink from "./HeaderLink.astro";
/* import { Icon } from "astro-icon/components"; */
import { SITE_TITLE } from "../../consts";
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  /* DropdownSubmenu */
} from "astro-navbar";

const allPosts = await getCollection("blog");

const categories = [
  ...new Set(allPosts.flatMap((blog) => blog.data.categories)),
];
---

<header class="lg:flex p-5 gap-5">
  <Astronav>
    <div class="flex w-full justify-between">
      <div class="flex lg:flex-row lg:w-full flex-col items-center">
        <img
          src="/android-chrome-512x512.png"
          alt="logo"
          class="lg:flex lg:h-11 lg:w-11 hidden"
        />
        <span class="logo lg:text-[2.441rem] lar"
          ><a
            href="/"
            class="text-black-900 visited:text-black-900 hover:text-secondary-900 no-underline"
            >{SITE_TITLE}</a
          ></span
        >
      </div>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row list-none lg:items-center">
        <li>
          <HeaderLink href="/blog">Blog</HeaderLink>
        </li>
        <li>
          <Dropdown class="group lg:text-2xl text-xl">
            <button
              class="flex items-center border-0 rounded-none bg-transparent hover:bg-transparent text-primary-900 hover:text-secondary-900"
            >
              <span class="lg:text-[1.563rem] med">Topics</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="lg:absolute lg:top-0 bg-white-50">
                <ul class="list-none">
                  {
                    categories.map((category) => {
                      // Check if category is defined
                      if (category) {
                        return (
                          <li class="p-2">
                            <a
                              href={`/category/${category}`}
                              title={`View posts in "${category}"`}
                              class="category"
                            >
                              {category.replace(/-/g, " ")}
                            </a>
                          </li>
                        );
                      }
                      // Return null if category is not defined
                      return null;
                    })
                  }
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <HeaderLink href="/typography-test">Typography</HeaderLink>
        </li>
