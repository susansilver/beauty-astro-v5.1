---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import HeaderLink from "./HeaderLink.astro";
/* import { Icon } from "astro-icon/components"; */
import { SITE_TITLE } from "../../consts";
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  /* DropdownSubmenu */
} from "astro-navbar";

const allPosts = await getCollection("blog");

const categories = [
  ...new Set(allPosts.flatMap((blog) => blog.data.categories)),
];
---

<header class="lg:flex p-5 gap-5 dark:bg-black-900 dark:text-white-50">
  <Astronav>
    <div class="flex w-full justify-between">
      <div class="flex lg:flex-row lg:w-full flex-col items-center">
        <Image
          src="/android-chrome-512x512.png"
          alt="logo"
          height={50}
          width={50}
          class="lg:flex hidden"
        />
        <span class="logo lg:text-[2.441rem] lar"
          ><a
            href="/"
            class="text-black-900 dark:text-white-50 visited:text-secondary-900 hover:text-secondary-900 no-underline"
            >{SITE_TITLE}</a
          ></span
        >
      </div>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row list-none lg:items-center">
        <li>
          <HeaderLink href="/about">About</HeaderLink>
        </li>
        <li>
          <HeaderLink href="/blog">Blog</HeaderLink>
        </li>
        <li>
          <Dropdown class="group lg:text-2xl text-xl">
            <button
              class="flex items-center border-0 rounded-none bg-transparent hover:bg-transparent text-primary-900 hover:text-secondary-900"
            >
              <span class="lg:text-[1.563rem] med text-primary-900">Topics</span
              >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="lg:absolute lg:top-0 bg-white-50">
                <ul class="list-none">
                  {
                    categories.map((category) => {
                      // Check if category is defined
                      if (category) {
                        return (
                          <li class="p-2">
                            <a
                              href={`/category/${category}`}
                              title={`View posts in "${category}"`}
                              class="category"
                            >
                              {category.replace(/-/g, " ")}
                            </a>
                          </li>
                        );
                      }
                      // Return null if category is not defined
                      return null;
                    })
                  }
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <HeaderLink href="/press">Press</HeaderLink>
        </li>
        <li>
          <HeaderLink href="https://www.patreon.com/susansilver"
            >Patreon</HeaderLink
          >
        </li>
        <li>
          <Dropdown class="group lg:text-2xl text-xl">
            <button
              class="flex items-center border-0 rounded-none bg-transparent hover:bg-transparent text-primary-900 hover:text-secondary-900"
            >
              <span class="lg:text-[1.563rem] med text-primary-900">Extras</span
              >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="lg:absolute lg:top-0 bg-white-50">
                <ul class="list-none">
                  <li>
                    <HeaderLink href="/downloads">Cross Stitch</HeaderLink>
                  </li>
                  <li>
                    <HeaderLink href="/hitchhikers-guide-to-the-galaxy/"
                      >Hitchhiker's Guide (42)</HeaderLink
                    >
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <HeaderLink
            href="mailto:beautyofmathematics@susansilver.net"
            class="bg-slate-200 rounded-xl p-2">Contact</HeaderLink
          >
        </li>
        <li>
          <a href="/rss.xml"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="2em"
              height="2em"
              viewBox="0 0 24 24"
            >
              <path
                fill="#ee802f"
                d="M5 3h14a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2m2.5 12A1.5 1.5 0 0 0 6 16.5A1.5 1.5 0 0 0 7.5 18A1.5 1.5 0 0 0 9 16.5A1.5 1.5 0 0 0 7.5 15M6 10v2a6 6 0 0 1 6 6h2a8 8 0 0 0-8-8m0-4v2a10 10 0 0 1 10 10h2A12 12 0 0 0 6 6"
              ></path>
            </svg></a
          >
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>

<style>
  .category {
    text-transform: capitalize;
    text-decoration: none;
    padding: 0.5em;
  }
</style>
