<footer id="colophon" class="text-black-900">
  <div class="flex justify-center flex-row items-end">
    <div class="m-5">&copy; 2018 - <span id="copy"></span> Suzza Silver</div>
  </div>
</footer>

<script>
  const copyElement = document.querySelector("#copy");

  if (copyElement !== null) {
    (copyElement as HTMLElement).textContent = new Date()
      .getFullYear()
      .toString();
  } else {
    console.error('Element with ID "copy" not found.');
  }
</script>
